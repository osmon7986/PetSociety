@model PetSocietyWeb.Models.Generated.ProductCategory

@{
    ViewData["Title"] = "刪除分類";
}

<div class="container-fluid py-3 mb-4 bg-white rounded shadow-sm">
    <div class="d-flex justify-content-between align-items-center">
        <h3 class="fw-bold text-dark mb-0">
            <i class="fa-solid fa-trash-can me-2 text-danger"></i> 刪除分類
        </h3>
    </div>
</div>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-10">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-danger py-3 rounded-top">
                    <h5 class="mb-0 text-white"><i class="fa-solid fa-exclamation-triangle me-2"></i> 確定要刪除此分類嗎？</h5>
                </div>
                <div class="card-body p-4 bg-light">

                    <div class="mb-3">
                        <label class="form-label fw-semibold">分類名稱</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-tag"></i></span>
                            <input type="text" class="form-control bg-white" value="@Model.CategoryName" readonly />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">分類描述</label>
                        <textarea class="form-control rounded-3 shadow-sm bg-white" rows="3" readonly>@Model.Description</textarea>
                    </div>

                    <form asp-action="Delete" id="deleteForm">
                        <input type="hidden" asp-for="CategoryId" />

                        <div class="d-flex mt-5">
                            <a asp-action="Index" class="btn btn-secondary px-4">
                                <i class="fa-solid fa-arrow-left me-1"></i> 取消返回
                            </a>
                            <button type="button" class="btn btn-danger px-4 ms-auto" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal">
                                <i class="fa-solid fa-trash-can me-1"></i> 確認刪除
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title text-light" id="deleteModalLabel">
                    <i class="fa-solid fa-exclamation-triangle me-2"></i> 刪除確認
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="fw-bold mb-1">您確定要刪除這個分類嗎？</p>
                <p class="text-muted small mb-0">分類名稱：@Model.CategoryName</p>
                <p class="text-danger mt-3 mb-0"><i class="fa-solid fa-circle-info me-1"></i> 注意：刪除分類可能會影響屬於此分類的商品。</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    確認刪除
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('confirmDeleteBtn').addEventListener('click', function () {
            document.getElementById('deleteForm').submit();
        });
    </script>
}