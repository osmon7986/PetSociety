@model PetSocietyWeb.Models.Generated.ProductCategory

@{
    ViewData["Title"] = "新增商品分類";
}

<div class="container-fluid py-3 mb-4 bg-white rounded shadow-sm">
    <div class="d-flex justify-content-between align-items-center">
        <h3 class="fw-bold text-dark mb-0">
            <i class="fa-solid fa-plus-circle me-2 text-primary"></i> 新增商品分類
        </h3>
    </div>
</div>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-10">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary py-3 rounded-top">
                    <h5 class="mb-0 text-white"><i class="fa-solid fa-layer-group me-2"></i> 填寫分類資訊</h5>
                </div>
                <div class="card-body p-4 bg-light">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="CategoryName" class="form-label fw-semibold">分類名稱</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fa-solid fa-tag"></i></span>
                                <input asp-for="CategoryName" class="form-control" placeholder="請輸入分類名稱" />
                            </div>
                            <span asp-validation-for="CategoryName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold">分類描述</label>
                            <textarea asp-for="Description" class="form-control rounded-3 shadow-sm" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-flex mt-5">
                            <a asp-action="Index" class="btn btn-primary px-4">
                                <i class="fa-solid fa-arrow-left me-1"></i> 返回
                            </a>
                            <button type="submit" class="btn btn-primary px-4 ms-auto">
                                <i class="fa-solid fa-plus me-1"></i> 建立
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}