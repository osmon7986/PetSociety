@model PetSocietyWeb.ViewModels.ProductDetailViewModel

@{
    ViewData["Title"] = "商品明細";
}

<div class="container-fluid py-3 mb-4 bg-white rounded shadow-sm">
    <div class="d-flex justify-content-between align-items-center">
        <h3 class="fw-bold text-dark mb-0">
            <i class="fa-solid fa-circle-info me-2 text-info"></i> 商品明細
        </h3>
    </div>
</div>

<div class="container-fluid">
    <div class="row justify-content-center">

        <div class="col-lg-10 col-md-12">

            <div class="card shadow-lg border-0 rounded-3">

                <div class="card-header bg-info py-3 rounded-top">
                    <h5 class="mb-0 text-white"><i class="fa-solid fa-file-lines me-2"></i> 商品詳細資訊</h5>
                </div>

                <div class="card-body p-4 bg-light">

                    <div class="row">

                        <div class="col-md-5 mb-4 mb-md-0">
                            <div class="bg-white p-2 rounded shadow-sm text-center h-100 d-flex align-items-center justify-content-center" style="min-height: 350px;">
                                @if (Model.ImageUrlList != null && Model.ImageUrlList.Count > 0)
                                {
                                    <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">

                                        <div class="carousel-indicators">
                                            @for (int i = 0; i < Model.ImageUrlList.Count; i++)
                                            {
                                                <button type="button" data-bs-target="#productCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="true"></button>
                                            }
                                        </div>

                                        <div class="carousel-inner rounded">
                                            @for (int i = 0; i < Model.ImageUrlList.Count; i++)
                                            {
                                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                                    <img src="@Model.ImageUrlList[i]" class="d-block w-100" style="height: 400px; object-fit: contain;" alt="商品圖片">
                                                </div>
                                            }
                                        </div>

                                        @if (Model.ImageUrlList.Count > 1)
                                        {
                                            <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                                                <span class="carousel-control-prev-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                                                <span class="visually-hidden">Previous</span>
                                            </button>
                                            <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                                                <span class="carousel-control-next-icon bg-dark rounded-circle p-3" aria-hidden="true"></span>
                                                <span class="visually-hidden">Next</span>
                                            </button>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <div class="text-muted text-center">
                                        <i class="fa-solid fa-image fa-4x mb-3 text-secondary"></i>
                                        <p class="mb-0">暫無商品圖片</p>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="col-md-7">

                            <div class="mb-3">
                                <label class="form-label fw-semibold">商品類別</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa-solid fa-layer-group"></i></span>
                                    <input type="text" class="form-control" value="@Model.CategoryName" readonly />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">賣家信箱</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                                    <input type="text" class="form-control" value="@Model.SellerEmail" readonly />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-semibold">商品名稱</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa-solid fa-tag"></i></span>
                                    <input type="text" class="form-control" value="@Model.ProductName" readonly />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">單價</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa-solid fa-dollar-sign"></i></span>
                                        <input type="text" class="form-control" value="@Model.Price.ToString("N0")" readonly />
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">數量</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa-solid fa-cubes"></i></span>
                                        <input type="text" class="form-control" value="@Model.Stock" readonly />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">商品狀態</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa-solid fa-toggle-on"></i></span>
                                        <input type="text" class="form-control" value="@Model.Status" readonly />
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-semibold">建立時間</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa-solid fa-calendar-days"></i></span>
                                        <input type="text" class="form-control" readonly value="@Model.CreateDate.ToString("yyyy/MM/dd HH:mm:ss")" />
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div> <div class="mt-4">
                        <label class="form-label fw-semibold">商品描述</label>
                        <textarea class="form-control rounded-3 shadow-sm" rows="4" readonly style="resize: none;">@Model.Description</textarea>
                    </div>

                    <div class="d-flex mt-4">
                        <a asp-action="Index" class="btn btn-secondary px-4">
                            <i class="fa-solid fa-arrow-left me-1"></i> 返回列表
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning px-4 ms-auto text-dark">
                            <i class="fa-solid fa-pen-to-square me-1"></i> 編輯此商品
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>