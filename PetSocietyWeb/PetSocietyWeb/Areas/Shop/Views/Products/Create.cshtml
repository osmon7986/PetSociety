@model PetSocietyWeb.ViewModels.ProductCreateViewModel

@{
    ViewData["Title"] = "新增商品";
}

<div class="container-fluid py-3 mb-4 bg-white rounded shadow-sm">
    <div class="d-flex justify-content-between align-items-center">
        <h3 class="fw-bold text-dark mb-0">
            <i class="fa-solid fa-circle-plus me-2 text-primary"></i> 新增商品
        </h3>
    </div>
</div>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <div class="card shadow-lg border-0 rounded-3">

                <div class="card-header py-3 text-white" style="background-color: #6d5b50;">
                    <h5 class="mb-0 fw-bold text-white"><i class="fa-solid fa-layer-group me-2"></i> 填寫商品資訊</h5>
                </div>

                <div class="card-body p-4 bg-light">

                    <form asp-action="Create" enctype="multipart/form-data">

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label fw-bold">商品類別</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fa-solid fa-list"></i></span>
                                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                                    <option value="">-- 請選擇商品類別 --</option>
                                </select>
                            </div>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MemberId" class="form-label fw-bold">賣家信箱</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fa-solid fa-user"></i></span>
                                <select asp-for="MemberId" class="form-select" asp-items="ViewBag.MemberId">
                                    <option value="">-- 請選擇賣家 --</option>
                                </select>
                            </div>
                            <span asp-validation-for="MemberId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProductName" class="form-label fw-bold">商品名稱</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fa-solid fa-tag"></i></span>
                                <input asp-for="ProductName" class="form-control" placeholder="請輸入商品名稱" />
                            </div>
                            <span asp-validation-for="ProductName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Photos" class="form-label fw-bold">商品圖片(可多選)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fa-regular fa-image"></i></span>
                                <input asp-for="Photos" type="file" class="form-control" multiple accept="image/*" onchange="previewImages(this)" />
                            </div>

                            <div id="imagePreviewContainer" class="d-flex flex-wrap gap-2 mt-3 p-2 bg-white rounded border d-none">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">商品描述</label>
                            <textarea asp-for="Description" class="form-control rounded-3 shadow-sm" rows="4" placeholder="請輸入商品介紹..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label fw-bold">單價</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="fa-solid fa-dollar-sign"></i></span>
                                    <input asp-for="Price" class="form-control" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Stock" class="form-label fw-bold">庫存數量</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="fa-solid fa-cubes"></i></span>
                                    <input asp-for="Stock" class="form-control" />
                                </div>
                                <span asp-validation-for="Stock" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-bold">商品狀態</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fa-solid fa-toggle-on"></i></span>
                                <select asp-for="Status" class="form-select">
                                    <option value="上架中">上架中</option>
                                    <option value="已下架">已下架</option>
                                    <option value="缺貨中">缺貨中</option>
                                </select>
                            </div>
                        </div>

                        <div class="d-flex mt-4">
                            <a asp-action="Index" class="btn btn-secondary px-4">
                                <i class="fa-solid fa-arrow-left me-1"></i> 返回列表
                            </a>
                            <button type="submit" class="btn btn-warning px-4 ms-auto fw-bold text-dark">
                                <i class="fa-solid fa-plus me-1"></i> 新增商品
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/localization/messages_zh_TW.min.js"></script>

    <script>
        function previewImages(input) {
            var previewContainer = document.getElementById('imagePreviewContainer');
            previewContainer.innerHTML = ''; // 清空舊的預覽

            if (input.files && input.files.length > 0) {
                // 有檔案時顯示預覽區塊
                previewContainer.classList.remove('d-none');

                Array.from(input.files).forEach(file => {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        // 建立圖片元素
                        var img = document.createElement('img');
                        img.src = e.target.result;
                        img.className = 'img-thumbnail rounded shadow-sm';
                        img.style.height = '100px';
                        img.style.width = '100px';
                        img.style.objectFit = 'cover';
                        previewContainer.appendChild(img);
                    }
                    reader.readAsDataURL(file);
                });
            } else {
                // 沒檔案時隱藏
                previewContainer.classList.add('d-none');
            }
        }
    </script>
}