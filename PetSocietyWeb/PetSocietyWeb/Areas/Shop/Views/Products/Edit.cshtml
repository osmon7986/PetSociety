@model PetSocietyWeb.ViewModels.ProductEditViewModel

@{
    ViewData["Title"] = "商品詳細編輯";
}

<div class="container-fluid py-3 mb-4 bg-white rounded shadow-sm">
    <div class="d-flex justify-content-between align-items-center">
        <h3 class="fw-bold text-dark mb-0">
            <i class="fa-solid fa-pen-to-square me-2 text-warning"></i> 商品詳細編輯
        </h3>
    </div>
</div>

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header py-3 text-white" style="background-color: #6d5b50;">
                    <h5 class="mb-0 fw-bold text-white"><i class="fa-solid fa-box-open me-2"></i> 編輯商品資訊</h5>
                </div>

                <div class="card-body p-4 bg-light">

                    <form asp-action="Edit" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="ProductId" />

                        <div class="row mb-4">
                            @if (Model.ImageUrlList != null && Model.ImageUrlList.Count > 0)
                            {
                                <label class="form-label fw-bold d-block">目前圖片庫 (@Model.ImageUrlList.Count 張)</label>
                                <div class="d-flex flex-wrap gap-2 p-3 bg-white rounded border shadow-sm">
                                    @foreach (var imgPath in Model.ImageUrlList)
                                    {
                                        <div class="border rounded overflow-hidden" style="width: 100px; height: 100px;">
                                            <img src="@imgPath" class="w-100 h-100" style="object-fit: cover;" />
                                        </div>
                                    }
                                </div>
                                <p class="text-muted small mt-1"><i class="fa-solid fa-circle-info me-1"></i>若需修改，請在下方上傳新圖片(將會全數取代舊圖)</p>
                            }
                            else
                            {
                                <div class="alert alert-secondary mb-0">暫無商品圖片</div>
                            }

                            <div class="col-md-6 d-none" id="newImagePreviewBlock">
                                <label class="form-label fw-bold d-block text-start text-success">
                                    <i class="fa-solid fa-arrow-right me-1"></i> 將更新為
                                </label>
                                <div class="p-2 bg-white rounded border border-success shadow-sm text-center" id="newImageContainer">
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label fw-semibold">商品類別</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fa-solid fa-layer-group"></i></span>
                                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                            </div>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MemberId" class="form-label fw-semibold">賣家信箱</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fa-solid fa-user"></i></span>
                                <select asp-for="MemberId" class="form-select" asp-items="ViewBag.MemberId"></select>
                            </div>
                            <span asp-validation-for="MemberId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProductName" class="form-label fw-semibold">商品名稱</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fa-solid fa-tag"></i></span>
                                <input asp-for="ProductName" class="form-control" />
                            </div>
                            <span asp-validation-for="ProductName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Photos" class="form-label fw-semibold">更新圖片 (可選)</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fa-regular fa-image"></i></span>
                                <input asp-for="Photos" type="file" class="form-control" multiple accept="image/*" onchange="previewNewImages(this)" />
                            </div>
                            <div class="form-text text-muted">
                                <i class="fa-solid fa-triangle-exclamation me-1 text-warning"></i>
                                上傳新圖片將會 <span class="text-danger fw-bold">取代</span> 原有的圖片。
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold">商品描述</label>
                            <textarea asp-for="Description" class="form-control rounded-3 shadow-sm" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label fw-semibold">單價</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="fa-solid fa-dollar-sign"></i></span>
                                    <input asp-for="Price" class="form-control" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Stock" class="form-label fw-semibold">數量</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-white"><i class="fa-solid fa-cubes"></i></span>
                                    <input asp-for="Stock" class="form-control" />
                                </div>
                                <span asp-validation-for="Stock" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-semibold">商品狀態</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="fa-solid fa-toggle-on"></i></span>
                                <select asp-for="Status" class="form-select">
                                    <option value="上架中">上架中</option>
                                    <option value="已下架">已下架</option>
                                    <option value="缺貨中">缺貨中</option>
                                </select>
                            </div>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>

                        <div class="d-flex mt-4">
                            <a asp-action="Index" class="btn btn-secondary px-4">
                                <i class="fa-solid fa-arrow-left me-1"></i> 返回列表
                            </a>
                            <button type="submit" class="btn btn-warning px-4 ms-auto fw-bold text-dark">
                                <i class="fa-solid fa-floppy-disk me-1"></i> 儲存變更
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/localization/messages_zh_TW.min.js"></script>

    <script>
        function previewNewImages(input) {
            var container = document.getElementById('newImageContainer');
            var block = document.getElementById('newImagePreviewBlock');
            container.innerHTML = ''; // 清空舊預覽

            if (input.files && input.files.length > 0) {
                block.classList.remove('d-none'); // 顯示區塊

                Array.from(input.files).forEach(file => {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        var img = document.createElement('img');
                        img.src = e.target.result;
                        img.className = 'img-fluid rounded shadow-sm m-1';
                        img.style.maxHeight = '200px';
                        img.style.objectFit = 'contain'; // 保持比例
                        container.appendChild(img);
                    }
                    reader.readAsDataURL(file);
                });
            } else {
                block.classList.add('d-none');
            }
        }
    </script>
}