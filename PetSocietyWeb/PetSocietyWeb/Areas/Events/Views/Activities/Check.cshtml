
@{
    ViewData["Title"] = "Check";
}


@section Styles {
    <link href="~/lib/datatables/css/datatables.jqueryui.min.css" rel="stylesheet" />
    <style>
    </style>
}

<h1 class="mt-3">活動審核</h1>

<div class="">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>活動名稱</th>
                <th>活動描述</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>


    
@section Scripts {
    <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>
    <script src="/cdn.datatables.net/fixedheader/3.4.0/js/dataTables.fixedHeader.min.js"></script>
    <script>
        $(document).ready(function () {
            $('table').DataTable({
                ajax: {
                    type: 'POST',
                    url: '/Events/Activities/CheckJson',
                    dataSrc: function (json) { return json; }
                },
                columns: [
                    { "data": "title" ,"width": "45%"},
                    { "data": "description" ,"width": "45%"},
                    {
                        "data": null,
                        "render": function (data, type, row) {
                            return  `<a href="/Events/Activities/Details/${data.activityId}"class="btn btn-sm btn-primary d-block mb-1">詳細內容</a>` +
                                    `<a href="/Events/Activities/CheckDetails/${data.activityId}" class="btn btn-sm btn-primary d-block mb-1">審核</a>` 
                            },
                        "width": "10%"
                    }
                ],
                fixedHeader: { header: true },
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.3.5/i18n/zh-HANT.json'
                }
            });
        });
		
    </script>

}