@model PetSocietyWeb.Models.Generated.Activity


@{
    ViewData["Title"] = "Details";
}

<h1 class="mt-3">活動詳細內容</h1>

<div>
    <h4>活動資訊</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            舉辦人
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MemberId)
        </dd>
        <dt class = "col-sm-2">
            活動標題
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            活動內容
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            活動開始時間
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartTime)
        </dd>
        <dt class = "col-sm-2">
            活動結束時間
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndTime)
        </dd>
        <dt class = "col-sm-2">
            活動地點
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            最大參與人數
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaxCapacity)
        </dd>
        <dt class = "col-sm-2">
            報名開始時間
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegistrationStartTime)
        </dd>
        <dt class = "col-sm-2">
            報名結束時間
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RegistrationEndTime)
        </dd>
        <dt class = "col-sm-2">
            活動狀態
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            緯度
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Latitude)
        </dd>
        <dt class = "col-sm-2">
            經度
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Longitude)
        </dd>
        <dt class = "col-sm-2">
            活動創建日期
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        
        
        
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ActivityId" class="btn btn-primary">
        <i></i> 編輯
    </a>
    <a asp-action="Index" class="btn btn-primary">
        <i class="fas fa-arrow-left"></i> 返回列表
    </a>
</div>
