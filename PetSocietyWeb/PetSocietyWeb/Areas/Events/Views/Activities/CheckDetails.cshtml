@model PetSocietyWeb.Models.Generated.Activity

@{
    ViewData["Title"] = "Edit";
}

<h1 class="mt-3">編輯活動</h1>

<h4>活動內容</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- 隱藏必要欄位，避免被覆寫為預設值 -->
            <input asp-for="ActivityId" type="hidden" />


            <div class="form-group">
                <label asp-for="Title" class="control-label">活動名稱</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">活動描述</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityCheck" class="control-label">審核</label>
                <select asp-for="ActivityCheck" class=" form-control">
                    <option value="" disabled selected>-- 請選擇分類 --</option>
                </select>
                <span asp-validation-for="MemberId" class="text-danger"></span>
            </div>
            <div class="mt-2 form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Check" class="btn btn-primary">
                    <i class="fas fa-arrow-left"></i> 返回列表
                </a>
            </div>
        </form>
    </div>
    
</div>