@model IEnumerable<PetSocietyWeb.Models.Generated.Activity>

@{
    ViewData["Title"] = "Index";
}

@section Styles {
    <link href="~/lib/datatables/css/datatables.jqueryui.min.css" rel="stylesheet" />
    <style>
    </style>
}

<h1 class="mt-3">活動編輯</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">新增活動</a>
    <a asp-action="Check" class="btn btn-primary">審核活動</a>
</p>
<div class="">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>活動名稱</th>
                <th>活動描述</th>
                <th>活動開始時間</th>
                <th>活動結束時間</th>
                <th>活動地點</th>
                <th>最大參與人數</th>
                <th>活動圖片</th>
				<th>審核狀態</th>
                <th></th>
                
            </tr>
        </thead>
    </table>
</div>


    
@section Scripts {
    <script src="~/lib/datatables/js/jquery.datatables.min.js"></script>
    <script src="/cdn.datatables.net/fixedheader/3.4.0/js/dataTables.fixedHeader.min.js"></script>
    <script>
        $(document).ready(function () {
            $('table').DataTable({
                ajax: {
                    type: 'POST',
                    url: '/Events/Activities/IndexJson',
                    dataSrc: function (json) { return json; }
                },
                columns: [
                    { "data": "title" ,"width": "10%"},
                    { "data": "description" ,"width": "10%"},
                    {
                        "data": "startTime",
                        "width": "10%",
                        "render": function (data, type, row) {
                            if (data && (type === 'display' || type === 'filter')) {
                                return moment(data).format('YYYY/MM/DD HH:mm');
                            }
                            return data;}
                    },
                    {
                        "data": "endTime",
                        "width": "10%",
                        "render": function (data, type, row) {
                            if (data && (type === 'display' || type === 'filter')) {
                                return moment(data).format('YYYY/MM/DD HH:mm');
                            }
                            return data;
                        }
                    },
                    { "data": "location" ,"width": "10%"},
                    { "data": "maxCapacity" ,"width": "10%"},
                    { 
                        "data": null,
                        "render": function (data, type, row) {
                            return `<img style="width:100px;height:78px" src="${data.activityImg}"/> `;
                            },
                        "width": "10%"},
                    {
                        "data": 'activityCheck',
                        "render": function(data){
                            switch(data){
                                case 0:
                                    return '<span class="badge bg-success">審核中</span>';
                                case 1:
                                    return '<span class="badge bg-secondary">已通過</span>';
                                case 2:
                                    return '<span class="badge bg-warning text-dark">退件/span>';
								default:
								    return '<span class="badge bg-info text-dark">未知狀態</span>';
                            }
                        },"width": "10%"

                    },
                    
					{   
                        "data": null, 
                        "render": function (data, type, row) {
                            return  `<a href="/Events/Activities/Details/${data.activityId}"class="btn btn-sm btn-primary d-block mb-1">詳細內容</a>` +
                                    `<a href="/Events/Activities/Edit/${data.activityId}"class="btn btn-sm btn-primary d-block mb-1">編輯</a>` +
                                    `<a href="/Events/Activities/Delete/${data.activityId}"class="btn btn-sm btn-primary d-block mb-1">刪除</a>`;
					        },
                        "width": "10%"}
                     
					  
                    
                ],
                fixedHeader: { header: true },
                language: {
                    url: '//cdn.datatables.net/plug-ins/2.3.5/i18n/zh-HANT.json'
                }
            });
        });
    </script>

}
