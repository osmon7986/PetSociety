@model PetSocietyWeb.Areas.User.ViewModels.MemberVM

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <h2><i class="fa-solid fa-plus text-primary"></i> 新增會員</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <form asp-area="User" asp-controller="Members" asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">名字</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" placeholder="例如：user@gmail.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">密碼</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">聯絡電話</label>
                            <input asp-for="Phone" class="form-control" placeholder="例如：09xxxxxxxx" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">上傳照片</label>
                            <input type="file" name="newPhoto" class="form-control" accept="image/*" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-floppy-disk"></i> 儲存
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">取消</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}