@model PetSocietyWeb.Areas.User.ViewModels.MemberVM

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <h2><i class="fa-solid fa-pen-to-square text-primary"></i> 編輯會員</h2>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body">
                    <form asp-area="User" asp-controller="Members" asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MemberId" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">名字</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">聯絡電話</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Role" class="form-label">角色權限</label>
                            <select asp-for="Role" class="form-select">
                                <option value="0">一般會員</option>
                                <option value="1">管理員</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input class="form-check-input" type="checkbox" asp-for="IsActive" />
                            <label class="form-check-label" asp-for="IsActive">
                                帳號啟用 (Is Active)
                            </label>
                        </div>

                        <div class="mb-4">
                            <label class="form-label d-block">照片預覽</label>
                            <div class="mb-2">
                                <partial name="_ShowPhotoPartial" model="Model" />
                            </div>
                            <label class="form-label">上傳新照片</label>
                            <input type="file" name="newPhoto" class="form-control" accept="image/*" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-floppy-disk"></i> 儲存變更
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">取消</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}