<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PetSocietyWeb</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PetSocietyWeb.styles.css" asp-append-version="true" />
    <link href="img/favicon.ico" rel="icon">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <link href="~/dashmin/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/dashmin/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <link href="~/dashmin/css/bootstrap.min.css" rel="stylesheet">

    <link href="~/dashmin/css/style.css" rel="stylesheet">

    @await RenderSectionAsync("Styles", required: false)

</head>
<body>
    <div class="container-fluid position-relative bg-white d-flex p-0">
        @* <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div> *@
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-dark navbar-light">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary"><i class="fa-solid fa-paw"></i> PetSociety</h3>
                </a>
                <div class="navbar-nav w-100">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-item nav-link active"><i class="fa fa-tachometer-alt me-2"></i>主頁</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-laptop me-2"></i>會員</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-area="User" asp-controller="Members" asp-action="Index" class="dropdown-item">會員管理</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-laptop me-2"></i>活動</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-area="Events" asp-controller="Activities" asp-action="Index" class="dropdown-item">活動編輯</a>
                            <a asp-area="Events" asp-controller="ActivityAuditLogs" asp-action="Index" class="dropdown-item">活動審核</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-laptop me-2"></i>學院</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            @* <a asp-area="Class" asp-controller="Courses" asp-action="Index" class="dropdown-item">課程管理</a> *@
                            <a asp-area="Class" asp-controller="Courses" asp-action="List" class="dropdown-item">課程管理</a>

                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-laptop me-2"></i>商城</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-area="Shop" asp-controller="ProductCategories" asp-action="Index" class="dropdown-item">商品類別管理</a>
                            <a asp-area="Shop" asp-controller="Products" asp-action="Index" class="dropdown-item">商品管理</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-laptop me-2"></i>論壇</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a asp-area="Community" asp-controller="Articles" asp-action="Index" class="dropdown-item">文章管理</a>
                            <a asp-area="Community" asp-controller="Comments" asp-action="Index" class="dropdown-item">留言管理</a>
                            <a asp-area="Community" asp-controller="Categories" asp-action="Index" class="dropdown-item">分類管理</a>
                            <a asp-area="Community" asp-controller="ForumTags" asp-action="Index" class="dropdown-item">標籤管理</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="content">
            <nav class="navbar navbar-expand bg-medium navbar-light sticky-top px-4 py-0">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0"><i class="fa fa-hashtag"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>
                <form class="d-none d-md-flex ms-4">
                    <input class="form-control border-0" type="search" placeholder="搜尋">
                </form>
                <div class="navbar-nav align-items-center ms-auto">

                    @* <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fa fa-bell me-lg-2"></i>
                            <span class="d-none d-lg-inline-flex"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                            <a href="#" class="dropdown-item">
                                <h6 class="fw-normal mb-0">Profile updated</h6>
                                <small>15 minutes ago</small>
                            </a>
                            <hr class="dropdown-divider">
                            <a href="#" class="dropdown-item">
                                <h6 class="fw-normal mb-0">New user added</h6>
                                <small>15 minutes ago</small>
                            </a>
                            <hr class="dropdown-divider">
                            <a href="#" class="dropdown-item">
                                <h6 class="fw-normal mb-0">Password changed</h6>
                                <small>15 minutes ago</small>
                            </a>
                            <hr class="dropdown-divider">
                            <a href="#" class="dropdown-item text-center">See all notifications</a>
                        </div>
                    </div> *@
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            @{
                                // 1. 嘗試從 Claims 取得目前登入者的 ID
                                var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;

                                // 2. 如果有 ID，就組合成讀取圖片的網址；否則就用預設圖
                                var imgSrc = userId != null
                                ? Url.Action("GetProfilePic", "Members", new { area = "User", id = userId })
                                : Url.Content("~/img/cat.png");
                            }

                            <img class="rounded-circle me-lg-2"
                                 src="@imgSrc"
                                 onerror="this.src='@Url.Content("~/img/cat.png")'"
                                 alt=""
                                 style="width: 40px; height: 40px; object-fit: cover;">

                            <span class="d-none d-lg-inline-flex">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    @User.Identity.Name
                                }
                                else
                                {
                                    <text>Guest</text>
                                }
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                            <a asp-area="" asp-controller="Home" asp-action="Logout" class="dropdown-item">登出</a>
                        </div>
                    </div>
                </div>
            </nav>
            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
            <div class="container-fluid pt-4 px-4">
                <div class="bg-light rounded-top p-4">
                    <div class="row">
                        <div class="col-12 col-sm-6 text-center text-sm-start">
                            &copy; <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>, All Right Reserved.
                        </div>
                        <div class="col-12 col-sm-6 text-center text-sm-end">
                            Designed By <a href="https://htmlcodex.com">HTML Codex</a>
                            <br>
                            Distributed By <a class="border-bottom" href="https://themewagon.com" target="_blank">ThemeWagon</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/dashmin/lib/chart/chart.min.js"></script>
    <script src="~/dashmin/lib/easing/easing.min.js"></script>
    <script src="~/dashmin/lib/waypoints/waypoints.min.js"></script>
    <script src="~/dashmin/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/dashmin/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/dashmin/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/dashmin/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/dashmin/js/main.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>